@page
@model ShpinxCommercial.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].ClientEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Client) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientEmail)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ClientId" class="btn btn-primary">Edit</a> 
                    <a asp-page="./Details" asp-route-id="@item.ClientId" class="btn btn-primary">Details</a> 
                    <a asp-page="./Delete" asp-route-id="@item.ClientId" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
